{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",

        "outDir": "../dist",
        "declaration": true,

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}